{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "test"]
}
